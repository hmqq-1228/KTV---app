<div ng-controller="infoCon">
	<div class="bar bar-header">
		<button class="button icon ion-ios-arrow-back button-clear" ng-click="back()"></button>
		<h2 class="title">修改密码</h2>
		<button class="button button-clear">完成</button>
	</div>
	<div class="content has-header scroll scroll-content" style="overflow-y: scroll">
		<div class="list">
			<div class="item item-avatar-right" ng-click="openModal()">
				<img src="img/xyp-person_center-assets/panda.png">
				<h2 class="padding-vertical">头像</h2>
			</div>
			<div class="item">
				<span class="col-10">昵称</span>
				<span class="col-25 col-offset-66">登录名称</span>
			</div>
			<div class="item" ng-click="changePsd()">
				<span class="col-25">登录密码</span>
				<span class="col-10 col-offset-66">修改</span>
			</div>
		</div>
	</div>
</div>
